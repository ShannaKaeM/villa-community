{# Generic Card Component with Variants #}
{# Usage: {% include 'components/card.twig' with { variant: 'property', ... } %} #}

{# Set default values #}
{% set variant = variant|default('generic') %}
{% set classes = classes|default('') %}
{% set title = title|default('Card Title') %}
{% set description = description|default('') %}
{% set image = image|default({
    src: '',
    alt: title
}) %}
{% set link = link|default({
    url: '#',
    text: 'Learn More'
}) %}
{% set meta = meta|default({}) %}

<div class="d-card shadow-xl {{ classes }}">
    {% if image.src %}
        <figure>
            <img src="{{ image.src }}" alt="{{ image.alt|default(title) }}">
            
            {% if variant == 'property' and meta.price %}
                <div class="d-badge d-badge-primary absolute bottom-4 left-4 text-lg">
                    {{ meta.price }}
                </div>
            {% endif %}
            
            {% if variant == 'property' and meta.status %}
                <div class="d-badge d-badge-accent absolute top-4 right-4">
                    {{ meta.status }}
                </div>
            {% endif %}
            
            {% if variant == 'property' and meta.featured %}
                <div class="d-badge d-badge-secondary absolute top-4 left-4">
                    Featured
                </div>
            {% endif %}
            
            {% if variant == 'business' %}
                <div class="d-badge d-badge-info absolute top-4 left-4">
                    Business
                </div>
            {% endif %}
        </figure>
    {% endif %}
    
    <div class="d-card-body">
        <h2 class="d-card-title">
            {% if link.url %}
                <a href="{{ link.url }}" class="hover:text-primary transition-colors">
                    {{ title }}
                </a>
            {% else %}
                {{ title }}
            {% endif %}
        </h2>
        
        {% if description %}
            <p>{{ description }}</p>
        {% endif %}
        
        {% if variant == 'property' %}
            {% if meta.location %}
                <div class="d-badge d-badge-ghost gap-2 mb-2">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    {{ meta.location }}
                </div>
            {% endif %}
            
            <div class="d-stats d-stats-vertical lg:d-stats-horizontal shadow bg-base-200">
                {% if meta.bedrooms %}
                    <div class="d-stat">
                        <div class="d-stat-title">Bedrooms</div>
                        <div class="d-stat-value text-lg">{{ meta.bedrooms }}</div>
                    </div>
                {% endif %}
                
                {% if meta.bathrooms %}
                    <div class="d-stat">
                        <div class="d-stat-title">Bathrooms</div>
                        <div class="d-stat-value text-lg">{{ meta.bathrooms }}</div>
                    </div>
                {% endif %}
                
                {% if meta.area %}
                    <div class="d-stat">
                        <div class="d-stat-title">Area</div>
                        <div class="d-stat-value text-lg">{{ meta.area }}</div>
                    </div>
                {% endif %}
            </div>
        {% endif %}
        
        {% if variant == 'business' %}
            <div class="d-join d-join-vertical mb-4 w-full">
                {% if meta.address %}
                    <div class="d-badge d-badge-ghost gap-2 d-join-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        {{ meta.address }}
                    </div>
                {% endif %}
                
                {% if meta.phone %}
                    <div class="d-badge d-badge-ghost gap-2 d-join-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        {{ meta.phone }}
                    </div>
                {% endif %}
                
                {% if meta.email %}
                    <div class="d-badge d-badge-ghost gap-2 d-join-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        {{ meta.email }}
                    </div>
                {% endif %}
                
                {% if meta.website %}
                    <div class="d-badge d-badge-ghost gap-2 d-join-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                        </svg>
                        {{ meta.website }}
                    </div>
                {% endif %}
            </div>
        {% endif %}
        
        {% if description %}
            <p class="text-base-content/70 mb-4">{{ description }}</p>
        {% endif %}
        
        {% if link %}
            <div class="d-card-actions justify-end">
                <a href="{{ link.url|default('#') }}" class="d-btn d-btn-primary" {% if link.target %}target="{{ link.target }}"{% endif %}>
                    {{ link.text|default('Read more') }}
                </a>
            </div>
        {% endif %}
    </div>
</div>