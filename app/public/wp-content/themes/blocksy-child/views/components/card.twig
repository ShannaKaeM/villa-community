{# Generic Card Component with Variants #}
{# Usage: {% include 'components/card.twig' with { variant: 'property', ... } %} #}

{# Set default values #}
{% set variant = variant|default('generic') %}
{% set classes = classes|default('') %}
{% set title = title|default('Card Title') %}
{% set description = description|default('') %}
{% set image = image|default({
    src: '',
    alt: title
}) %}
{% set link = link|default({
    url: '#',
    text: 'Learn More'
}) %}
{% set meta = meta|default({}) %}

<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 {{ classes }}">
    {% if image.src %}
        <div class="relative">
            <img src="{{ image.src }}" 
                alt="{{ image.alt|default(title) }}" 
                class="w-full h-60 object-cover">
                
            {% if variant == 'property' and meta.price %}
                <div class="absolute bottom-0 left-0 bg-blue-600 text-white py-2 px-4 font-semibold rounded-tr-lg">
                    <span>{{ meta.price }}</span>
                </div>
            {% endif %}
            
            {% if variant == 'property' and meta.status %}
                <div class="absolute top-4 right-4 bg-green-600 text-white py-1 px-3 rounded-full text-sm font-semibold shadow-sm">
                    {{ meta.status }}
                </div>
            {% endif %}
            
            {% if variant == 'property' and meta.featured %}
                <div class="absolute top-4 left-4 bg-yellow-500 text-white py-1 px-3 rounded-full text-sm font-semibold shadow-sm">
                    Featured
                </div>
            {% endif %}
            
            {% if variant == 'business' %}
                <div class="absolute top-4 left-4 bg-blue-600 text-white py-1 px-3 rounded-full text-sm font-semibold shadow-sm">
                    Business
                </div>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="p-6">
        {% if title %}
            <h3 class="text-xl font-bold text-gray-800 mb-2">
                <a href="{{ link.url|default('#') }}" class="hover:text-blue-600 transition-colors">
                    {{ title }}
                </a>
            </h3>
        {% endif %}
        
        {% if variant == 'property' and meta.location %}
            <div class="flex items-center text-gray-600 mb-3">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>{{ meta.location }}</span>
            </div>
        {% endif %}
        
        {% if variant == 'property' %}
            <div class="flex flex-wrap gap-4 mb-4">
                {% if meta.bedrooms %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        <span>{{ meta.bedrooms }} Beds</span>
                    </div>
                {% endif %}
                
                {% if meta.bathrooms %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>{{ meta.bathrooms }} Baths</span>
                    </div>
                {% endif %}
                
                {% if meta.area %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5v-4m0 4h-4m4 0l-5-5"></path>
                        </svg>
                        <span>{{ meta.area }}</span>
                    </div>
                {% endif %}
            </div>
        {% endif %}
        
        {% if variant == 'business' %}
            <div class="flex flex-wrap gap-4 mb-4">
                {% if meta.address %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span>{{ meta.address }}</span>
                    </div>
                {% endif %}
                
                {% if meta.phone %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <span>{{ meta.phone }}</span>
                    </div>
                {% endif %}
                
                {% if meta.email %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <span>{{ meta.email }}</span>
                    </div>
                {% endif %}
                
                {% if meta.website %}
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                        </svg>
                        <span>{{ meta.website }}</span>
                    </div>
                {% endif %}
            </div>
        {% endif %}
        
        {% if description %}
            <p class="text-gray-600 text-sm mb-4">{{ description }}</p>
        {% endif %}
        
        {% if link %}
            <a href="{{ link.url|default('#') }}" class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded-lg font-semibold transition-colors shadow-md" {% if link.target %}target="{{ link.target }}"{% endif %}>
                {{ link.text|default('Read more') }}
            </a>
        {% endif %}
    </div>
</div>