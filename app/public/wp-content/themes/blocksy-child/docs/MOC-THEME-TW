  .m-badge.bottom-4 { bottom: 1rem; }
  .m-badge.left-4 { left: 1rem; }
  .m-badge.right-4 { right: 1rem; }
  
  .m-card-figure img,
  .m-card > figure img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
    display: block; /* Remove any extra space */
    transition: transform 0.3s ease; /* Smooth zoom effect */
  }
  
  .m-card:hover .m-card-figure img,
  .m-card:hover > figure img {
    transform: scale(1.05); /* Subtle zoom on hover */
  }
  
