@layer theme, base, components, utilities;

@import "tailwindcss/theme.css" layer(theme) theme(static);
/* @import "tailwindcss/preflight.css" layer(base); */
@import "tailwindcss/utilities.css" layer(utilities);
:root {
  /* Foundational Palette (Single Source of Truth) */
  --theme-palette-color-1: #5A7F80;
  --theme-palette-color-2: #883A3F; 
  --theme-palette-color-3:rgb(21, 143, 147); 
  --theme-palette-color-4:rgb(140, 121, 102); 
  --theme-palette-color-5: #888888; 
  --theme-palette-color-6: #ffffff; 
  --theme-palette-color-7: #333333; 
  --theme-palette-color-8: #f8f9fb;
}

@theme {
  /* Primary Color Scale */
  --primary: var(--theme-palette-color-1);
  --primary-lightest: color-mix(in oklch, var(--primary) 30%, white);
  --primary-light: color-mix(in oklch, var(--primary) 70%, white);
  --primary-dark: color-mix(in oklch, var(--primary) 70%, black);
  --primary-darkest: color-mix(in oklch, var(--primary) 30%, black);
  
  /* Secondary Color Scale */
  --secondary: var(--theme-palette-color-2);
  --secondary-lightest: color-mix(in oklch, var(--secondary) 30%, white);
  --secondary-light: color-mix(in oklch, var(--secondary) 70%, white);
  --secondary-dark: color-mix(in oklch, var(--secondary) 70%, black);
  --secondary-darkest: color-mix(in oklch, var(--secondary) 30%, black);
  
  /* Emphasis Color Scale */
  --emphasis: var(--theme-palette-color-3);
  --emphasis-lightest: color-mix(in oklch, var(--emphasis) 30%, white);
  --emphasis-light: color-mix(in oklch, var(--emphasis) 70%, white);
  --emphasis-dark: color-mix(in oklch, var(--emphasis) 70%, black);
  --emphasis-darkest: color-mix(in oklch, var(--emphasis) 30%, black);
  
  /* Subtle Color Scale */
  --subtle: var(--theme-palette-color-5);
  --subtle-lightest: color-mix(in oklch, var(--subtle) 30%, white);
  --subtle-light: color-mix(in oklch, var(--subtle) 70%, white);
  --subtle-dark: color-mix(in oklch, var(--subtle) 70%, black);
  --subtle-darkest: color-mix(in oklch, var(--subtle) 30%, black);

  /* Base Color Scale */
  --base: var(--theme-palette-color-4);
  --base-lightest: color-mix(in oklch, var(--base) 30%, white);
  --base-light: color-mix(in oklch, var(--base) 70%, white);
  --base-dark: color-mix(in oklch, var(--base) 70%, black);
  --base-darkest: color-mix(in oklch, var(--base) 30%, black);
  
  /* Black and White */
  --black: var(--theme-palette-color-7);
  --white: var(--theme-palette-color-6);
}

/**
 * MI Theme Component Library
 * 
 * This file contains all the component definitions for the MI Theme.
 * Components use the m- prefix to distinguish them from DaisyUI components.
 */

@layer components {
  /* ======= Card Components ======= */
  
  .m-card {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    justify-content: flex-start; /* Align content to top */
    border-radius: 0.5rem;
    background-color: var(--white);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    height: 100%; /* Make all cards the same height */
    transition: transform 0.2s, box-shadow 0.2s; /* Smooth hover effects */
  }
  
  .m-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  }
  
  .m-card:focus {
    outline: none;
  }
  
  .m-card-bordered {
    border: 1px solid rgb(229 231 235);
  }
  
  .m-card-compact .m-card-body {
