  }
  
  /* Card figure styling - works with both .m-card-figure and figure elements */
  .m-card-figure,
  .m-card > figure {
    position: relative;
    width: 100%;
    margin: 0; /* Remove default figure margin */
    overflow: hidden; /* Contain image on hover */
  }
  
  /* Badge positioning within card figures */
  .m-card-figure .m-badge,
