    gap: 0.375rem; /* Even tighter spacing for compact cards */
  }
  
  .m-card-body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem; /* Further reduced gap for tighter spacing */
    padding: 1.25rem;
    flex-grow: 1; /* Allow body to grow and push actions to bottom */
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Start content at the top */
  }
  
  /* Push card actions to the bottom */
  .m-card-body > .m-card-actions {
    margin-top: auto;
    padding-top: 0.75rem;
  }
  
