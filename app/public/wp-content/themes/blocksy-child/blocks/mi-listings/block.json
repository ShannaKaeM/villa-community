{
  "name": "mi-listings",
  "title": "Property Listings",
  "description": "Display a filterable grid of property listings",
  "category": "miblocks",
  "icon": "admin-home",
  "keywords": ["properties", "listings", "grid", "filter"],
  "supports": {
    "align": ["wide", "full"],
    "html": false,
    "customClassName": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Our Properties"
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "postsPerPage": {
      "type": "number",
      "default": 9
    },
    "showFilters": {
      "type": "boolean",
      "default": true
    },
    "filterPosition": {
      "type": "string",
      "default": "left"
    },
    "showPropertyTypes": {
      "type": "boolean",
      "default": true
    },
    "showLocations": {
      "type": "boolean",
      "default": true
    },
    "showAmenities": {
      "type": "boolean",
      "default": true
    },
    "showBedroomFilter": {
      "type": "boolean",
      "default": true
    },
    "showBathroomFilter": {
      "type": "boolean",
      "default": true
    },
    "showGuestFilter": {
      "type": "boolean",
      "default": true
    },
    "showPriceFilter": {
      "type": "boolean",
      "default": true
    },
    "featuredOnly": {
      "type": "boolean",
      "default": false
    }
  },
  "editor_script": "editor.js",
  "editor_style": "editor.css",
  "style": "style.css",
  "template": "blocks/mi-listings.twig"
}
